<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.warkahot.nitjcompanion.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30sp"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:text="Welcome..."
        android:id="@+id/welcome_text" />

    <ImageView
        android:layout_width="120sp"
        android:layout_height="120sp"
        android:layout_marginTop="20sp"
        android:src="@drawable/icon"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5sp"
        android:textColor="#ffffff"
        android:textSize="19sp"
        android:text="NitJ Companion"
        android:id="@+id/nj_text" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40sp"
            android:textColor="#ffffff"
            android:textSize="19sp"
            android:id="@+id/get_it_all_text"
            android:text="Get it all in a click of a button..."/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/get_it_all_text"
            android:layout_height="wrap_content">
        <Button
            android:layout_width="300sp"

            android:layout_gravity="center_horizontal"
            android:layout_height="50sp"
            android:background="@drawable/custom_button1"
            android:textColor="#2097ab"
            android:layout_margin="15sp"
            android:textAllCaps="false"
            android:elevation="0sp"
            android:text="Log in / Sign up"
            android:id="@+id/sign_up_first_page" />

        <ImageView
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_marginTop="20sp"
            android:elevation="72sp"
            android:background="#00000000"
            android:layout_marginLeft="20sp"
            android:src="@drawable/google_icon"/>

        </RelativeLayout>

    </RelativeLayout>

    </RelativeLayout>




</LinearLayout>
