<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/events_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#044f95"
            android:fitsSystemWindows="true"
            app:titleTextColor="@color/white"
            app:theme="@style/ToolbarColoredBackArrow"

            />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#1f4978"
        android:id="@+id/ll1"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suggest / Report"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:padding="7sp"
            />



    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="180sp"
        android:padding="10sp"
        android:hint="Write your Review/ Suggestion/ Report here"
        android:gravity="top"
        android:textColor="#363636"
        android:textSize="13sp"
        android:background="@color/cardview_light_background"
        android:id="@+id/suggestions" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.4sp"
        android:layout_alignParentTop="true"
        android:shadowColor="#ffffff"
        android:background="#aaaaaa"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:layout_marginTop="5sp"
        android:background="@drawable/send_review_button"
        android:text="Send"
        android:id="@+id/send_button" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#2d801c"
        android:id="@+id/ll2"
        android:layout_marginTop="35sp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developed By"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:padding="4sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"

        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:scaleType="fitStart"
            android:layout_marginBottom="10sp"
            android:id="@+id/my_pic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:textColor="#505050"
            android:layout_gravity="center"
            android:clickable="true"
            android:layout_marginBottom="10sp"
            android:textIsSelectable="true"
            android:text=""
            android:id="@+id/my_info" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.4sp"
        android:layout_alignParentTop="true"
        android:shadowColor="#ffffff"
        android:background="#aaaaaa"/>

</LinearLayout>

    </ScrollView>